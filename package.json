{
  "name": "shiki-class-transformer",
  "version": "0.2.0",
  "description": "convert shiki inline styles to classes",
  "main": "dist/index.js",
  "type": "module",
  "types": "./dist/index.d.mts",
  "scripts": {
    "build": "esno ./scripts/generate.ts && tsup",
    "test": "vitest --no-isolate --pool=threads"
  },
  "files": [
    "dist",
    "src/themes"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.js"
    },
    "./themes/*": "./src/themes/*"
  },
  "keywords": [
    "shiki",
    "highlight",
    "transformer"
  ],
  "author": "Plumbiu",
  "license": "MIT",
  "devDependencies": {
    "@plumbiu/eslint-config": "^0.3.8",
    "@shikijs/types": "^1.22.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.0",
    "colord": "^2.9.3",
    "eslint": "^9.14.0",
    "jsdom": "^25.0.1",
    "rgb-hex": "^4.1.0",
    "shiki": "^1.22.2",
    "tm-themes": "^1.9.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "style-to-object": "^1.0.8"
  }
}
